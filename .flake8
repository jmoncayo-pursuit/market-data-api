[flake8]
max-line-length = 88
exclude = .git,__pycache__,build,dist,*.egg-info,alembic/*,tests/test_main.py:165
per-file-ignores =
    alembic/env.py:E501,F401
    alembic/versions/*.py:E501
    app/api/endpoints/prices.py:E501
    app/main.py:E501
    app/models/base.py:E501
    app/models/market_data.py:E501
    app/services/market_data.py:E501
    app/services/kafka_service.py:E501
    app/services/redis_service.py:E501
    tests/test_market_data.py:E501
ignore = E203,W503
